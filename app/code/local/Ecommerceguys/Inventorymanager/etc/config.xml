<?xml version="1.0"?>
<config>
    <modules>
        <Ecommerceguys_Inventorymanager>
            <version>0.1.0</version>
        </Ecommerceguys_Inventorymanager>
    </modules>
    <frontend>
        <routers>
            <inventorymanager>
                <use>standard</use>
                <args>
                    <module>Ecommerceguys_Inventorymanager</module>
                    <frontName>inventorymanager</frontName>
                </args>
            </inventorymanager>
        </routers>
        <layout>
            <updates>
                <inventorymanager>
                    <file>inventorymanager.xml</file>
                </inventorymanager>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<inventorymanager>
				<use>admin</use>
				<args>
					<module>Ecommerceguys_Inventorymanager</module>
					<frontName>inventorymanager</frontName>
				</args>
			</inventorymanager>
        </routers>
    </admin>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Ecommerceguys_Inventorymanager>
							<title>Inventorymanager Module</title>
							<sort_order>10</sort_order>
						</Ecommerceguys_Inventorymanager>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<inventorymanager>
					<file>inventorymanager.xml</file>
				</inventorymanager>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <helpers>
            <inventorymanager>
                <class>Ecommerceguys_Inventorymanager_Helper</class>
            </inventorymanager>
        </helpers>
        <models>
        	<inventorymanager>
                <class>Ecommerceguys_Inventorymanager_Model</class>
                <resourceModel>inventorymanager_resource</resourceModel>
            </inventorymanager>
            <inventorymanager_resource>
            	<class>Ecommerceguys_Inventorymanager_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>inventorymanager_vendor</table>
                    </vendor>
                </entities>
   			</inventorymanager_resource>
   		</models>
        <resources>
            <inventorymanager_setup>
                <setup>
                    <module>Ecommerceguys_Inventorymanager</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventorymanager_setup>
            <inventorymanager_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventorymanager_write>
            <inventorymanager_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventorymanager_read>
        </resources>

            </inventorymanager_resource>
        </models>
    </global>
</config>