<config>
    <tabs>
        <magewidgets translate="label" module="featuredproduct">
            <label>MageWidgets</label>
            <sort_order>210</sort_order>
        </magewidgets>
    </tabs>    
    <sections>
        <featuredproduct translate="label" module="featuredproduct">
            <label>Featured Products</label>
            <tab>magewidgets</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <featuredproduct translate="label">
                    <label>Featured Products Widget Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <num_displayed_products translate="label">
                            <label>The number of products to display</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </num_displayed_products>
                        <list_mode translate="label">
                            <label>List Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>featuredproduct/config_source_listMode</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </list_mode>
                        <show_out_of_stock translate="label">
                            <label>Show out of stock products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </show_out_of_stock>
                        <cache_lifetime translate="label">
                            <label>Cache Lifetime(in seconds)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>24 hours by default (default value setting = 0). To refresh and clear the cache, Clear the Blocks HTML Output Cache.</comment>
                        </cache_lifetime>
                    </fields>
                </featuredproduct>
            </groups>
        </featuredproduct>
    </sections>
</config>
