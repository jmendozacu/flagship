<?xml version="1.0"?>
<config>
  <modules>
    <Manv_Responsivebannerslider>
      <version>8.1.1</version>
    </Manv_Responsivebannerslider>
  </modules>
  <frontend>
    <routers>
      <responsivebannerslider>
        <use>standard</use>
          <args>
            <module>Manv_Responsivebannerslider</module>
            <frontName>responsivebannerslider</frontName>
          </args>
      </responsivebannerslider>
    </routers>
		<layout>
		  <updates>
			<responsivebannerslider>
			  <file>responsivebannerslider.xml</file>
			</responsivebannerslider>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <responsivebannerslider>
        <class>Manv_Responsivebannerslider_Helper</class>
      </responsivebannerslider>
    </helpers>
	<blocks>
	  <responsivebannerslider>
		<class>Manv_Responsivebannerslider_Block</class>
	  </responsivebannerslider>
	</blocks>
	<models>
	  <responsivebannerslider>
		<class>Manv_Responsivebannerslider_Model</class>
		<resourceModel>responsivebannerslider_mysql4</resourceModel>
	  </responsivebannerslider>
	  <responsivebannerslider_mysql4>
		<class>Manv_Responsivebannerslider_Model_Mysql4</class>
		<entities>		  
			  <responsivebanner>
				<table>manvresponsivebannerslider</table>
			  </responsivebanner>
        </entities>
	  </responsivebannerslider_mysql4>
	</models>
	<resources>
	  <responsivebannerslider_setup>
		<setup>
		  <module>Manv_Responsivebannerslider</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </responsivebannerslider_setup>
	  <responsivebannerslider_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </responsivebannerslider_write>
	  <responsivebannerslider_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </responsivebannerslider_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <responsivebannerslider>
	    <use>admin</use>
		<args>
		  <module>Manv_Responsivebannerslider</module>
		  <frontName>responsivebannerslider</frontName>
		</args>
	  </responsivebannerslider>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <responsivebannerslider module="responsivebannerslider">
		<title>Banner Slider</title>
		<sort_order>100</sort_order>
		<children>
		  <responsivebanner module="responsivebannerslider">
		    <title>Manage Responsivebanner</title>
			<sort_order>0</sort_order>
			<action>responsivebannerslider/adminhtml_responsivebanner</action>
		  </responsivebanner>
		</children>
	  </responsivebannerslider>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<responsivebannerslider translate="title" module="responsivebannerslider">
			  <title>Responsivebannerslider</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <responsivebanner translate="title">
			<title>Manage Responsivebanner</title>
			<sort_order>0</sort_order>
		  </responsivebanner>
			  </children>
			</responsivebannerslider>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<responsivebannerslider>
		  <file>responsivebannerslider.xml</file>
		</responsivebannerslider>
	  </updates>
	</layout>
  </adminhtml>
</config> 